{
  "name": "@martifylabs/mesh",
  "description": "Rapidly build Web3 apps on the Cardano Blockchain.",
  "homepage": "https://mesh.martify.io",
  "author": "MartifyLabs",
  "version": "1.2.0",
  "license": "Apache-2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MartifyLabs/mesh.git"
  },
  "bugs": {
    "url": "https://github.com/MartifyLabs/mesh/issues"
  },
  "keywords": [
    "blockchain",
    "cardano",
    "plutus",
    "utxo"
  ],
  "main": "dist/mesh.cjs",
  "module": "dist/mesh.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint --ext .ts .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "vite build",
    "prepare": "yarn lint && yarn test && yarn build",
    "dev": "vite build --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "browser": {
    "@emurgo/cardano-message-signing-nodejs": "@emurgo/cardano-message-signing-browser",
    "@emurgo/cardano-serialization-lib-nodejs": "@emurgo/cardano-serialization-lib-browser"
  },
  "exports": {
    ".": {
      "import": "./dist/mesh.js",
      "require": "./dist/mesh.cjs"
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.4.0",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "husky": "8.0.1",
    "rollup": "2.79.0",
    "tslib": "2.4.0",
    "vite": "3.1.4",
    "vite-plugin-eslint": "1.8.1",
    "vite-plugin-wasm": "2.1.0",
    "vitest": "0.22.1"
  },
  "dependencies": {
    "@emurgo/cardano-message-signing-browser": "1.0.1",
    "@emurgo/cardano-message-signing-nodejs": "1.0.1",
    "@emurgo/cardano-serialization-lib-browser": "11.1.0",
    "@emurgo/cardano-serialization-lib-nodejs": "11.1.0",
    "@emurgo/cip14-js": "3.0.1",
    "axios": "0.27.2",
    "bip39": "3.0.4",
    "nanoid": "3.3.4",
    "zod": "3.19.1"
  }
}
